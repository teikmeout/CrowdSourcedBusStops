<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile</title>
  </head>
  <body>
    <!-- Example -->
    <h1>USER: <%= user.username %></h1>
    <a href="/map">Add another location!</a>
    <% fav.forEach((fv) => { %>
    <div class='map-item'>
      <p>lat: <%= fv.lat %>, lng: <%= fv.lng %></p>
      <p>Bus route: <%= fv.route %></p>
      <form action="/music/favorites/<%#= fave._id %>?_method=DELETE" method="post">
          <input type="submit" value="Delete">
      </form>
    </div>
    <% })%>
    <form action="/auth?_method=DELETE" method="post">
      <input type="submit" value="Logout">
    </form>
    </form>
  </body>
</html>

